{
  "name": "dressed-forwarder",
  "version": "0.1.0-rc.2",
  "description": "Simple event proxy to forward events from a gateway connection to webhook server.",
  "scripts": {
    "dist": "rm -rf dist && bun copy && bun tsc",
    "copy": "rm -rf src/dressed && mkdir -p src/dressed/{types,utils} && cp {src/poly/env,node_modules/dressed/dist/{utils/{build,log},server/build/bundle}}.* src/dressed/utils && cp node_modules/dressed/dist/types/walk.* src/dressed/types",
    "checks": "bun dist && bun --bun biome check --write",
    "dry-publish": "bun publish --dry-run"
  },
  "dependencies": {
    "@dressed/ws": "^0.4.6",
    "commander": "^14.0.2",
    "dressed": "^1.10.2-canary.1.1",
    "esbuild": "^0.27.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": "./dist/index.js",
    "./server": "./dist/server.js",
    "./build": "./dist/build.js"
  },
  "type": "module",
  "bin": {
    "dressed-forwarder": "dist/bin/dressed-forwarder.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "homepage": "https://dressed.js.org",
  "keywords": [
    "bot",
    "proxy",
    "forwarder",
    "serverless",
    "discord",
    "discord-bot"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Inbestigator/dressed-forwarder.git"
  }
}
