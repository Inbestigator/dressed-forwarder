{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "declaration": true,
    "erasableSyntaxOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "outDir": "dist",
    "rewriteRelativeImportExtensions": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2018",
    "verbatimModuleSyntax": true,
    "rootDir": "src",
    "allowJs": true
  },
  "include": ["src/**/*"]
}
